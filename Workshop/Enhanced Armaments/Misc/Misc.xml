        <sound file="Content/Items/Weapons/ExplosionDebris1.ogg" type="OnUse" range="3000" />
        <Explosion range="500.0" structuredamage="2" ballastfloradamage="120" itemdamage="25" force="5" severlimbsprobability="0.25" decal="explosion" decalsize="0.4">
          <Affliction identifier="bleeding" strength="30" />
          <Affliction identifier="explosiondamage" strength="20" />
          <Affliction identifier="lacerations" strength="25" />
          <Affliction identifier="stun" strength="2" />
        </Explosion>
        <Remove />
      </StatusEffect>
      <LightComponent LightColor="255,229,178,100" Range="250" Flicker="0.5">
