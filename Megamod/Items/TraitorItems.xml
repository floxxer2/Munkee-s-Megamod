  <!-- Deep Vents Access Point -->
  <Item name="" identifier="mm_dvpoint" scale="0.5" category="Machine" subcategory="Beast">
    <sprite texture="Content/Map/Pirates/PirateShipAssets.png" sourcerect="1034,986,340,340" depth="0.700" origin="0.5,0.5" />
    <LightComponent range="75" lightcolor="255,0,127,175" flicker="0.5" flickespeed="0.3" powerconsumption="0" IsOn="false" castshadows="true" alphablend="false" allowingameediting="false">
