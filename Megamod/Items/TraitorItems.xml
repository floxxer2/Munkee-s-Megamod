        <sound file="%ModDir%/Megamod/Sounds/portal.ogg" range="700" volume="1" loop="true" stream="true" />
      </StatusEffect>
      <!-- Toggle noninteractable based on the lightcomponent's IsOn state -->
      <StatusEffect type="Always" target="This" interval="0.2" stackable="false" noninteractable="false">
